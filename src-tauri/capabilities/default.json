{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    {
      "identifier": "fs:allow-write-text-file",
      "allow": [
        {
          "path": "$APPDATA/*",
          "permission": "read-write-create"
        }
      ]
    },
    {
      "identifier": "fs:allow-read-text-file",
      "allow": [
        {
          "path": "$APPDATA/*",
          "permission": "read-write-create"
        }
      ]
    },
    "fs:allow-create",
    "fs:read-all",
    "fs:write-all",
    "notification:default"
  ]
}